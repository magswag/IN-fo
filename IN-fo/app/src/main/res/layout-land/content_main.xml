

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" >
    <!-- A CardView that contains a TextView -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="top"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    card_view:cardElevation="2dp"
android:layout_width="match_parent"
    android:clickable="true"
    android:onClick="bettery"
android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
card_view:cardCornerRadius="2dp">
<ImageView
    android:textColor="#000"
    android:src="@drawable/ic_battery_std_24dp"
    android:textSize="24sp"
    android:transitionName="@string/app_name"
    android:layout_margin="16dp"
    android:id="@+id/info_text"
    android:text="@string/action_settings"
    android:layout_width="80dp"
    android:layout_height="80dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="right"
        android:paddingRight="20dp"
android:id="@+id/battery"
        android:text="@string/battery"
        android:textSize="65sp"
        android:fontFamily="sans-serif-thin"/>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_phone"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardElevation="2dp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:onClick="PhoneCall"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp">
        <ImageView
            android:textColor="#000"
            android:src="@drawable/ic_smartphone_24dp"
            android:textSize="24sp"
            android:transitionName="@string/add_widget"
            android:layout_margin="16dp"
            android:id="@+id/Phone"
            android:text="@string/action_settings"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="right"
            android:paddingRight="30dp"
            android:id="@+id/Phonetext"
            android:text="@string/phone"
            android:textSize="65sp"
            android:fontFamily="sans-serif-thin"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_display"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        card_view:cardElevation="2dp"

        android:layout_width="match_parent"
        android:clickable="true"
        android:onClick="CrackScreen"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp">
        <ImageView
            android:textColor="#000"
            android:src="@drawable/ic_photo_camera_24dp"
            android:textSize="24sp"
            android:transitionName="@string/screen"
            android:layout_margin="16dp"
            android:id="@+id/Screen"
            android:text="@string/action_settings"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="right"
            android:paddingRight="3dp"
            android:id="@+id/Screentext"
            android:text="@string/screen"
            android:textSize="60sp"
            android:fontFamily="sans-serif-thin"/>
    </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
